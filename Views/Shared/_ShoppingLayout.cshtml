<body class="g-sidenav-show bg-gray-100">
    <form id="form1">
        <div class="min-height-300 bg-primary position-fixed w-100 bg-app-yg"></div>
        <aside class="sidenav bg-white navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-4"
               id="sidenav-main">
            <div class="sidenav-header text-center">
                <i class="fas fa-times p-3 cursor-pointer text-secondary opacity-5 position-absolute end-0 top-0 d-none d-xl-none"
                   aria-hidden="true"
                   id="iconSidenav"></i>
                <a class="navbar-brand m-0" href="/dashboard/">
                    <img src="../Content/assets/img/main-logo.png"
                         class="navbar-brand-img h-100"
                         alt="main_logo" />
                </a>
            </div>
            <hr class="horizontal dark mt-0" />
            <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">



                @if (HttpContext.Current.Session["userrole"] != null)
                {
                    <ul class="navbar-nav">
                        @if (HttpContext.Current.Session["userrole"].ToString().ToLower() == "admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="../user/users">
                                    <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fa fa-cart-arrow-down text-primary text-sm opacity-10"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Users</span>
                                </a>
                            </li>

                            @*<li class="nav-item">
                                    <a class="nav-link" href="../user/driver">
                                        <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                                            <i class="fa fa-cart-arrow-down text-primary text-sm opacity-10"></i>
                                        </div>
                                        <span class="nav-link-text ms-1">Driver</span>
                                    </a>
                                </li>*@

                            <li class="nav-item">
                                <a class="nav-link active" href="../orders/home">
                                    <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fa fa-cart-arrow-down text-primary text-sm opacity-10"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Orders</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="../orders/salesreport">
                                    <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fa fa-bar-chart-o text-primary text-sm opacity-10"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Sales Report</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="../orders/customer">
                                    <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fa fa-users text-primary text-sm opacity-10"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Customer</span>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="../orders/voucher">
                                    <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fa fa-shopping-bag text-primary text-sm opacity-10"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Voucher</span>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="../orders/order">
                                    <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fa fa-file-text-o text-primary text-sm opacity-10"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Make Order</span>
                                </a>
                            </li>
                        }

                        @if (HttpContext.Current.Session["userrole"].ToString().ToLower() == "callcentre")
                        {
                            <li class="nav-item">
                                <a class="nav-link active" href="../orders/home">
                                    <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fa fa-cart-arrow-down text-primary text-sm opacity-10"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Orders</span>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="../orders/order">
                                    <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fa fa-file-text-o text-primary text-sm opacity-10"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Make Order</span>
                                </a>
                            </li>



                        }

                        @if (HttpContext.Current.Session["userrole"].ToString().ToLower() == "driver")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="../orders/delivery">
                                    <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fa fa-file-text-o text-primary text-sm opacity-10"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Delivery</span>
                                </a>
                            </li>
                        }

                        @if (HttpContext.Current.Session["userrole"].ToString().ToLower() == "slaughter" || HttpContext.Current.Session["userrole"].ToString().ToLower() == "admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="../orders/slaughter">
                                    <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fa fa-file-text-o text-primary text-sm opacity-10"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Bookings</span>
                                </a>
                            </li>

                        }

                    </ul>
                }
            </div>
            <div class="sidenav-footer mx-3 ">

                <a href="../user/logout"
                   class="btn btn-dark btn-sm w-100 mb-3">@Resources.Global.Logout</a>

            </div>
        </aside>
        <main class="main-content position-relative border-radius-lg">
            <!-- Navbar -->
            <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl"
                 id="navbarBlur"
                 data-scroll="false">
                <div class="container-fluid py-1 px-3 no-printme">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                            <li class="breadcrumb-item text-sm">
                                <a class="opacity-5 text-white no-printme" href="javascript:;">Pages</a>
                            </li>
                            <li class="breadcrumb-item text-sm text-white active no-printme"
                                aria-current="page">
                                Orders
                            </li>
                        </ol>
                        <h6 class="font-weight-bolder text-white mb-0 no-printme">Orders</h6>
                    </nav>
                    <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4"
                         id="navbar">
                        <ul class="navbar-nav justify-content-end ms-md-auto">
                            <li class="nav-item d-flex align-items-center">
                                <a href="javascript:;"
                                   class="nav-link text-white font-weight-bold px-0">

                                    @if (HttpContext.Current.Session["UserName"] != null)
                                    {
                                        <i class="fa fa-user me-sm-1 no-printme"></i>
                                        <span class="d-sm-inline d-none"> @HttpContext.Current.Session["UserName"].ToString()</span>
                                    }

                                </a>
                            </li>
                            <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
                                <a href="javascript:;"
                                   class="nav-link text-white p-0"
                                   id="iconNavbarSidenav">
                                    <div class="sidenav-toggler-inner">
                                        <i class="sidenav-toggler-line bg-white"></i>
                                        <i class="sidenav-toggler-line bg-white"></i>
                                        <i class="sidenav-toggler-line bg-white"></i>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->



            <div>
                @if (HttpContext.Current.Session["UserName"] == null)
                {
                    <script>

                        $(document).ready(function () {
                            window.location.href = "/user/login";
                        });

                    </script>
                    @RenderBody()
                }
                else
                {
                    var objUser = (ShoppingApplication.Models.Datamodel.UserProfile)HttpContext.Current.Session["UserProfile"];

                    <input type="hidden" id="appCurrentUserId" value="@objUser.Id" />
                    <input type="hidden" id="appCurrentUserRole" value="@objUser.UserRole" />


                    <input type="hidden" id="hdnLang" value="@HttpContext.Current.Session["txtlang"].ToString()" />
                    <input type="hidden" id="hdnDir" value="@HttpContext.Current.Session["txtdir"].ToString()" />


                    @RenderBody()
                }


            

            </div>
        </main>


        <script src="../Content/assets/js/core/popper.min.js"></script>
        <script src="../Content/assets/js/core/bootstrap.min.js"></script>
        <script src="../Content/assets/js/plugins/perfect-scrollbar.min.js"></script>
        <script src="../Content/assets/js/plugins/smooth-scrollbar.min.js"></script>
        <script src="../Content/assets/js/plugins/chartjs.min.js"></script>

        <script>
            var win = navigator.platform.indexOf("Win") > -1;
            if (win && document.querySelector("#sidenav-scrollbar")) {
                var options = {
                    damping: "0.5",
                };
                Scrollbar.init(document.querySelector("#sidenav-scrollbar"), options);
            }</script>
        <script src="../Content/assets/js/dashboard.min.js"></script>
    </form>
</body>
</html>

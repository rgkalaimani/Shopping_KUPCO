<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="apple-touch-icon"
          sizes="180x180"
          href="../Content/assets/fav/apple-touch-icon.png" />
    <link rel="icon"
          type="image/png"
          sizes="32x32"
          href="../Content/assets/fav/favicon-32x32.png" />
    <link rel="icon"
          type="image/png"
          sizes="16x16"
          href="../Content/assets/fav/favicon-16x16.png" />
    <link rel="manifest" href="../Content/assets/fav/site.webmanifest" />
    <title>LOGIN | KUPCO</title>
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700"
          rel="stylesheet" />
    <!-- Nucleo Icons -->
    <link href="../Content/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="../Content/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js"
            crossorigin="anonymous"></script>
    <link href="../Content/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link id="pagestyle" href="../Content/assets/css/dashboard.css" rel="stylesheet" />

    <link rel="stylesheet" href="../Content/assets/css/custom.css" />
    <script src="~/Scripts/appsettings.js"></script>
    <style>

        .lblMessage {
            color: red;
        }
    </style>
</head>

<body class="">

    @using (Html.BeginForm("Login", "User", FormMethod.Post))
    {


        <a href="@Url.Action("ChangeLanguage","User",new { lang = "en" })">English</a> <span> |</span>
        <a href="@Url.Action("ChangeLanguage","User",new { lang = "ar" })">
            عربي
        </a> <span> |</span>


        <div class="container position-sticky z-index-sticky top-0"></div>
        <main class="main-content mt-0">
            <section>
                <div class="page-header min-vh-100">
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column mx-lg-0 mx-auto">
                                <div class="card card-plain">
                                    <div class="card-header pb-0 text-start">
                                        <h4 class="font-weight-bolder"> @Resources.Global.Sign_In </h4>
                                        <p class="mb-0">
                                            @Resources.Global.Enter_email_password
                                        </p>
                                    </div>
                                    <div class="card-body">
                                        <form role="form">
                                            <div class="mb-3">
                                                @*<input type="email"

                                                    placeholder="Email"
                                                    aria-label="Email" />*@

                                                @Html.TextBoxFor(a => a.UserName, new { Class = "form-control form-control-lg", placeholder = @Resources.Global.Email })
                                                @Html.ValidationMessageFor(a => a.UserName)


                                            </div>
                                            <div class="mb-3">

                                                @Html.PasswordFor(a => a.Password, new { Class = "form-control form-control-lg", placeholder = @Resources.Global.Password })


                                            </div>
                                            @* <div class="form-check form-switch">
                                                                                        <input class="form-check-input"
                                                       type="checkbox"
                                                       id="rememberMe" />
                                                <label class="form-check-label" for="rememberMe">تذكرنى</label>
                                                                                    </div>*@
                                            <div class="text-center">

                                                <button type="Submit" class="btn btn-lg btn-primary btn-lg w-100 mt-4 mb-0">@Resources.Global.Sign_In </button>

                                                <label class="lblMessage">@ViewBag.loginmessage</label>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6 d-lg-flex d-none h-100 my-auto pe-0 position-absolute top-0 end-0 text-center justify-content-center flex-column">
                                <div class="position-relative bg-gradient-primary h-100 m-3 px-7 border-radius-lg d-flex flex-column justify-content-center overflow-hidden"
                                     style="
                    background-image: url('../Content/assets/img/login-bg.jpeg');
                    background-size: cover;
                  ">
                                    <span class="mask bg-app-yg opacity-6"></span>
                                    <h4 class="mt-5 text-white font-weight-bolder position-relative">
                                        KUWAIT UNITED POULTRY CO
                                    </h4>
                                    <p class="text-white position-relative">Since 1974</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
        <!--   Core JS Files   -->
        <script src="./assets/js/core/popper.min.js"></script>
        <script src="./assets/js/core/bootstrap.min.js"></script>
        <script src="./assets/js/plugins/perfect-scrollbar.min.js"></script>
        <script src="./assets/js/plugins/smooth-scrollbar.min.js"></script>
        <script>
            var win = navigator.platform.indexOf("Win") > -1;
            if (win && document.querySelector("#sidenav-scrollbar")) {
                var options = {
                    damping: "0.5",
                };
                Scrollbar.init(document.querySelector("#sidenav-scrollbar"), options);
            }

        </script>
        <script async defer src="https://buttons.github.io/buttons.js"></script>
        <script src="./assets/js/dashboard.min.js"></script>
    }
</body>
</html>

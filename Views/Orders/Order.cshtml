<main class="main-content position-relative border-radius-lg">
    <input type="hidden" id="hdnSelected" />
    <div class="container-fluid py-4">
        <section class="">
            <div class="card">
                <div class="card-body">
                    <div class="page-content">
                        <div>
                            <ul class="nav nav-pills mb-3 p-2" id="pills-tab" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active"
                                            id="pills-frozen-tab"
                                            data-bs-toggle="pill"
                                            data-bs-target="#pills-frozen"
                                            type="button"
                                            role="tab"
                                            aria-controls="pills-frozen"
                                            aria-selected="true">
                                        Frozen Products
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link"
                                            id="pills-fresh-tab"
                                            data-bs-toggle="pill"
                                            data-bs-target="#pills-fresh"
                                            type="button"
                                            role="tab"
                                            aria-controls="pills-fresh"
                                            aria-selected="false">
                                        Fresh Products
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link"
                                            id="pills-egg-tab"
                                            data-bs-toggle="pill"
                                            data-bs-target="#pills-egg"
                                            type="button"
                                            role="tab"
                                            aria-controls="pills-egg"
                                            aria-selected="false">
                                        Fresh Eggs
                                    </button>
                                </li>
                            </ul>
                            <hr />
                            @if (Model != null)
                            {
                                var frozenList = Model.Where(x => x.ProductType.ToLower() == "frozen").ToList();
                                var freshProduct = Model.Where(x => x.ProductType.ToLower() == "fresh").ToList();
                                var freshEggs = Model.Where(x => x.ProductType.ToLower() == "fresheggs").ToList();


                                <div class="tab-content" id="pills-tabContent">
                                    <div class="tab-pane fade show active"
                                         id="pills-frozen"
                                         role="tabpanel"
                                         aria-labelledby="pills-home-tab"
                                         tabindex="0">
                                        <div id="divFrozenItems" class="items">


                                            @if (frozenList.Count > 0)
                                            {
                                                foreach (var item in frozenList)
                                                {
                                                    <div id="fz1" class="item my-5 my-md-1 rounded row">
                                                        <div class="col-3 text-center">
                                                            <img src="../assets/img/white/@item.img" alt="product">
                                                        </div>
                                                        <div class="col-7 my-auto">
                                                            <h4>@item.Name</h4>
                                                            <p class="text-secondary">@item.Price @item.priceLbl</p>
                                                            <div class="my-0">
                                                                <div class="row">
                                                                    <div class="col-8 col-md-4">
                                                                        <div class="counter-container">
                                                                            <div class="button ccol ccol-1">
                                                                                <button id="minus-btn">-</button>
                                                                            </div>
                                                                            <div class="number ccol ccol-2">
                                                                                <h2 id="count" class="count">1</h2>
                                                                            </div>
                                                                            <div class="button ccol ccol-1">
                                                                                <button id="plus-btn">+</button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div onclick="buyProduct(@item.Id,'P')" productid="@item.Id" sts="pending" class="col-2 text-center my-auto text-secondary text-opacity-50">
                                                            <span>
                                                                <i class="fa fs-4 fa-check-circle d-none"></i>
                                                                <i class="bi bi-bag-check-fill fs-4"></i>
                                                            </span>
                                                        </div>
                                                        <div class="col-12"></div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>

                                    <div class="tab-pane fade"
                                         id="pills-fresh"
                                         role="tabpanel"
                                         aria-labelledby="pills-profile-tab"
                                         tabindex="0">
                                        <div id="divFreshItems" class="items">

                                            @if (freshProduct.Count > 0)
                                            {
                                                foreach (var item in freshProduct)
                                                {
                                                    <div id="fz1" class="item my-5 my-md-1 rounded row">
                                                        <div class="col-3 text-center">
                                                            <img src="../assets/img/white/8G9A8961-2.webp" alt="product">
                                                        </div>
                                                        <div class="col-7 my-auto">
                                                            <h4>@item.Name                                                               </h4>
                                                            <p class="text-secondary">@item.Price @item.priceLbl </p>
                                                            <div class="my-0">
                                                                <div class="row">
                                                                    <div class="col-8 col-md-4">
                                                                        <div class="counter-container">
                                                                            <div class="button ccol ccol-1">
                                                                                <button id="minus-btn">-</button>
                                                                            </div>
                                                                            <div class="number ccol ccol-2">
                                                                                <h2 id="count" class="count">1</h2>
                                                                            </div>
                                                                            <div class="button ccol ccol-1">
                                                                                <button id="plus-btn">+</button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div onclick="buyProduct(@item.Id,'A')" productid="@item.Id" sts="accepted" class="col-2 text-center my-auto text-secondary text-opacity-50">
                                                            <span>
                                                                <i class="fa fs-4 fa-check-circle d-none"></i>
                                                                <i class="bi bi-bag-check-fill fs-4"></i>
                                                            </span>
                                                        </div>
                                                        <div class="col-12"></div>
                                                    </div>
                                                }
                                            }

                                        </div>
                                    </div>
                                    <div class="tab-pane fade"
                                         id="pills-egg"
                                         role="tabpanel"
                                         aria-labelledby="pills-contact-tab"
                                         tabindex="0">
                                        <div id="divEggItems" class="items">

                                            @if (freshEggs.Count > 0)
                                            {
                                                foreach (var item in freshEggs)
                                                {
                                                    <div id="fz1" class="item my-5 my-md-1 rounded row">
                                                        <div class="col-3 text-center">
                                                            <img src="../assets/img/white/8G9A8961-2.webp" alt="product">
                                                        </div>
                                                        <div class="col-7 my-auto">
                                                            <h4>@item.Name  </h4>
                                                            <p class="text-secondary">@item.Price  @item.priceLbl </p>
                                                            <div class="my-0">
                                                                <div class="row">
                                                                    <div class="col-8 col-md-4">
                                                                        <div class="counter-container">
                                                                            <div class="button ccol ccol-1">
                                                                                <button id="minus-btn">-</button>
                                                                            </div>
                                                                            <div class="number ccol ccol-2">
                                                                                <h2 id="count" class="count">1</h2>
                                                                            </div>
                                                                            <div class="button ccol ccol-1">
                                                                                <button id="plus-btn">+</button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div onclick="buyProduct(@item.Id,'C')" productid="@item.Id" sts="completed" class="col-2 text-center my-auto text-secondary text-opacity-50">
                                                            <span>
                                                                <i class="fa fs-4 fa-check-circle d-none"></i>
                                                                <i class="bi bi-bag-check-fill fs-4"></i>
                                                            </span>
                                                        </div>
                                                        <div class="col-12"></div>
                                                    </div>
                                                }
                                            }

                                        </div>
                                    </div>

                                </div>
                            }

                            <div class="bg-white">
                                <div class="container">
                                    <div class="d-flex my-4" onclick="navigate()">
                                        <a  class="btn btn-primary w-100">
                                            Continue <i class="bi bi-arrow-right fs-5 mx-2"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>


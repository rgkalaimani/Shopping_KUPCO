
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_ShoppingLayout.cshtml";
}

<script src="~/Scripts/appsettings.js"></script>
<script>

    $(document).ready(function () {


        $('#btnSearch').click(function () {


            console.log(appBaseUrl + "apicustomer/" + $('#txtCustMobile').val());


            $.ajax({
                type: "GET",
                url: appBaseUrl + "apicustomer/" + $('#txtCustMobile').val(),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    var customer = JSON.parse(response);
                    console.log(customer);

                    if (customer.Id == 0) {

                        alert("not exist");
                    }

                    $('#txtRCustName').val(customer.FullName);
                    $('#txtRCustMobile').val(customer.Mobile);
                    $('#txtRCustCity').val(customer.City);
                    $('#txtRCustBlock').val(customer.Address1);
                    $('#txtRCustStreet').val(customer.Address2);
                    $('#txtRCustBuilding').val(customer.Address3);
                    $('#hdnCustomerId').val(customer.Id);
                    

                },
                failure: function (response) {
                    alert(response.responseText);
                    alert("Failure");
                },
                error: function (response) {
                    alert(response);
                    alert("Error");
                }
            });


            

            
        })


    });



    function fetchLocalstorage() {

        alert(window.localStorage.getItem("selectedItem"));
    }

</script>

<input type="hidden" id="hdnSelectedItem" value="@ViewBag.selectdItem" />
<input type="hidden" id="hdnCustomerId" />

<div class="container-fluid py-4" onload="fetchLocalstorage()">
    <section class="">
        <div class="card">
            <div class="card-body">
                <div class="page-content">
                    <div id="divLogin">
                        <h2 class="my-4 text-app-blue-light">Enter Mobile #</h2>

                        <div class="row">
                            <div class="col-9 col-md-4">
                                <input type="number"
                                       id="txtCustMobile"
                                       class="form-control" />
                            </div>
                            <div class="col-3 col-md-2">
                                <input type="button" class="btn btn-primary" id="btnSearch" value="Search">
                                
                                </input>
                            </div>
                        </div>
                    </div>

                    <div id="divRegister">
                        <h2 class="mt-5 text-app-blue-light">Customer Info</h2>
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="form-group my-2">
                                    <label>Fullname</label>
                                    <input type="text"
                                           id="txtRCustName"
                                           class="form-control" />
                                </div>
                                <div class="form-group my-2">
                                    <label>Mobile #</label>
                                    <input type="number"
                                           id="txtRCustMobile"
                                           class="form-control" />
                                </div>
                                <div class="form-group my-2">
                                    <label>City</label>
                                    <select id="txtRCustCity" class="form-control">
                                        <option value="Farwaniya">Farwaniya</option>
                                        <option value="City">City</option>
                                    </select>
                                </div>
                                <div class="form-group my-2">
                                    <label>Block</label>
                                    <input type="text"
                                           id="txtRCustBlock"
                                           class="form-control" />
                                </div>
                                <div class="form-group my-2">
                                    <label>Street</label>
                                    <input type="text"
                                           id="txtRCustStreet"
                                           class="form-control" />
                                </div>
                                <div class="form-group my-2">
                                    <label>Building No #</label>
                                    <input type="text"
                                           id="txtRCustBuilding"
                                           class="form-control" />
                                </div>

                                <div>
                                    <button id="btnCustomerNext"
                                            class="btn btn-primary w-100">
                                        Next
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

